{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Профиль должности",
  "description": "Схема профиля должности на основе анализа профилей архитекторов",
  "type": "object",
  "properties": {
    "position_title": {
      "type": "string",
      "description": "Название должности"
    },
    "department_broad": {
      "type": "string",
      "description": "Подразделение укрупненно"
    },
    "department_specific": {
      "type": "string", 
      "description": "Подразделение"
    },
    "category": {
      "type": "string",
      "description": "Категория должности",
      "enum": [
        "Специалист",
        "Линейный руководитель (группа, направление)",
        "Руководитель среднего уровня (отдел, управление)",
        "Руководитель высшего уровня (департамент)"
      ]
    },
    "direct_manager": {
      "type": "string",
      "description": "Должность непосредственного руководителя"
    },
    "subordinates": {
      "type": "object",
      "description": "Количество подчиненных",
      "properties": {
        "departments": {
          "type": "integer",
          "description": "Количество подразделений"
        },
        "people": {
          "type": "string",
          "description": "Количество человек в прямом подчинении"
        }
      }
    },
    "primary_activity": {
      "type": "string",
      "description": "Профильная/обеспечивающая деятельность"
    },
    "responsibility_areas": {
      "type": "array",
      "description": "Области ответственности/должностные обязанности",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Название области"
          },
          "tasks": {
            "type": "array",
            "description": "Конкретные задачи",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["title", "tasks"]
      }
    },
    "professional_skills": {
      "type": "array",
      "description": "Профессиональные знания и умения",
      "items": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "Категория навыка"
          },
          "skills": {
            "type": "array",
            "description": "Конкретные навыки",
            "items": {
              "type": "string"
            }
          },
          "target_level": {
            "type": "string",
            "description": "Целевой уровень",
            "enum": ["Базовый", "Продвинутый", "Экспертный"]
          }
        },
        "required": ["category", "skills"]
      }
    },
    "corporate_competencies": {
      "type": "array",
      "description": "Корпоративные компетенции",
      "items": {
        "type": "string",
        "enum": [
          "Инновационность и развитие",
          "Ориентация на результат",
          "Стратегическое видение и принятие решений",
          "Клиентоориентированность", 
          "Эффективная коммуникация",
          "Работа в команде",
          "Лидерство"
        ]
      }
    },
    "personal_qualities": {
      "type": "array",
      "description": "Личностные качества",
      "items": {
        "type": "string",
        "enum": [
          "Внимательность",
          "Ответственность",
          "Коммуникабельность",
          "Стрессоустойчивость",
          "Настойчивость", 
          "Исполнительность",
          "Системность мышления",
          "Инициативность",
          "Проактивность",
          "Критическое мышление",
          "Лидерство",
          "Аналитический склад ума",
          "Многозадачность",
          "Решительность"
        ]
      }
    },
    "education": {
      "type": "object",
      "description": "Образование и опыт работы",
      "properties": {
        "previous_position_experience": {
          "type": "string",
          "description": "Опыт работы на предыдущей должности"
        },
        "total_experience": {
          "type": "string",
          "description": "Общий опыт работы"
        },
        "education_level": {
          "type": "string",
          "description": "Уровень образования",
          "enum": [
            "Среднее общее образование",
            "Среднее профессиональное образование",
            "Высшее образование",
            "Высшее/неоконченное высшее образование"
          ]
        },
        "specialties": {
          "type": "string",
          "description": "Специальность"
        },
        "additional_education": {
          "type": "string",
          "description": "Дополнительное профессиональное образование",
          "nullable": true
        }
      }
    },
    "career_path": {
      "type": "object",
      "description": "Карьеграмма",
      "properties": {
        "donor_positions": {
          "type": "array",
          "description": "Позиции доноры",
          "items": {
            "type": "string"
          }
        },
        "target_positions": {
          "type": "array", 
          "description": "Целевые позиции карьерного роста",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "technical_requirements": {
      "type": "object",
      "description": "Программное и техническое обеспечение должности",
      "properties": {
        "software": {
          "type": "array",
          "description": "Специальное программное обеспечение",
          "items": {
            "type": "string"
          }
        },
        "equipment": {
          "type": "array",
          "description": "Специальное оборудование", 
          "items": {
            "type": "string"
          }
        }
      }
    },
    "additional_info": {
      "type": "object",
      "description": "Дополнительная информация",
      "properties": {
        "promotion_conditions": {
          "type": "string",
          "description": "Условия повышения"
        },
        "promotion_decision": {
          "type": "string",
          "description": "Решение о повышении"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Метаданные",
      "properties": {
        "prepared_by": {
          "type": "string",
          "description": "Подготовлено (ФИО ответственного)"
        },
        "creation_date": {
          "type": "string",
          "format": "date",
          "description": "Дата формирования"
        }
      }
    }
  },
  "required": [
    "position_title",
    "department_broad",
    "department_specific", 
    "category",
    "primary_activity",
    "responsibility_areas",
    "professional_skills",
    "corporate_competencies",
    "personal_qualities"
  ]
}